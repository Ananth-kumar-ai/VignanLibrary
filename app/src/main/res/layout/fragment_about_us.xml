<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Optional: Add Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#CC6442"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet The Team"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:background="#FF9800"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The minds behind Vignan Library App"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Team Member 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_gradient_1">

                    <!-- Profile Picture -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="8dp"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:id="@+id/iv_member1_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile_placeholder"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true" />

                    </androidx.cardview.widget.CardView>

                    <!-- Member Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_member1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D.OMKAR"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tv_member1_branch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information Technology"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:layout_marginBottom="16dp" />

                        <!-- Social Icons -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:id="@+id/iv_member1_github"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_github"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp">

                                <ImageView
                                    android:id="@+id/iv_member1_linkedin"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_linkedin"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Team Member 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_gradient_2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="8dp"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:id="@+id/iv_member2_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile_placeholder"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_member2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Priya Sharma"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tv_member2_branch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information Technology"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:id="@+id/iv_member2_github"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_github"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp">

                                <ImageView
                                    android:id="@+id/iv_member2_linkedin"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_linkedin"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Team Member 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_gradient_3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="8dp"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:id="@+id/iv_member3_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile_placeholder"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_member3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rahul Verma"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tv_member3_branch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Electronics &amp; Communication"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:id="@+id/iv_member3_github"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_github"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp">

                                <ImageView
                                    android:id="@+id/iv_member3_linkedin"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_linkedin"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Team Member 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_gradient_4">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="8dp"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:id="@+id/iv_member4_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile_placeholder"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_member4_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anita Reddy"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tv_member4_branch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mechanical Engineering"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:id="@+id/iv_member4_github"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_github"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="6dp">

                                <ImageView
                                    android:id="@+id/iv_member4_linkedin"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_linkedin"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- App Info Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:alpha="0.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vignan Library App"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#CC6442"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â© 2022-2026 Vignan University"
                        android:textSize="12sp"
                        android:textColor="#999" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
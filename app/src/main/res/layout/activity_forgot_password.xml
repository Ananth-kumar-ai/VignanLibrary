<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:padding="8dp"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:src="@drawable/vignan_logo"
        android:layout_marginTop="80dp" />

    <!-- OTP Sending Layout -->
    <LinearLayout
        android:id="@+id/otp_sending"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registration No"
            app:boxStrokeColor="#CC6442"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="#CC6442">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/forgot_reg_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:nextFocusForward="@+id/submit_button" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:entries="@array/user_type"
            android:id="@+id/login_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginTop="10dp" />

        <!-- Square shape button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Generate OTP"
            android:textColor="@android:color/white"
            android:backgroundTint="#CC6442"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <!-- Update Password Layout -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/update_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            app:boxStrokeColor="#CC6442"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="#CC6442">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:nextFocusForward="@+id/new_pass" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            app:boxStrokeColor="#CC6442"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="#CC6442">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:nextFocusForward="@+id/pass_update" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Square shape button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/pass_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Update Password"
            android:textColor="@android:color/white"
            android:backgroundTint="#CC6442"
            app:cornerRadius="0dp" />
    </LinearLayout>

</LinearLayout>
